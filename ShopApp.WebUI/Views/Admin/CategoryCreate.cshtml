@model CategoryModel
@{
    ViewData["Title"] = "CategoryCreate";
}

<h1>Category Create</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CategoryCreate" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="Name"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Name" value="" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button class="btn btn-primary" type="submit">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>