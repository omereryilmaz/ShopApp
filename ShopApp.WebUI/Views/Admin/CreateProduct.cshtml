@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Create Product</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateProduct" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="Name"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Name" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="ImageUrl"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="ImageUrl" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="Description"></label>
                <div class="col-md-10">
                    <textarea class="form-control" id="editor" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="Price"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Price" value="" />
                </div>
            </div>
            <div class="form-group row">                
                <div class="col-md-10 offset-md-2">
                    <button class="btn btn-primary" type="submit">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>

